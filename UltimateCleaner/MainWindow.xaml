<Window x:Class="MemoryCleaner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MemoryCleaner" Height="550" Width="950">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" VerticalAlignment="Center" >
            <TextBlock Text="Диск:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox Width="120"
                      ItemsSource="{Binding Drives}"
                      SelectedItem="{Binding SelectedDrive}"
                      Margin="0,0,12,0"/>

            <TextBlock Text="Top:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox Width="60" Text="{Binding TopN}" Margin="0,0,12,0"/>

            <Button Content="Анализ (PowerShell)"
                    Command="{Binding AnalyzeCommand}"
                    Margin="0,0,8,0"/>

            <Button Content="Отмена"
                    Command="{Binding CancelCommand}"/>

            <ProgressBar Width="180" Height="18" Margin="16,0,0,0"
                         IsIndeterminate="{Binding IsBusy}"
                         VerticalAlignment="Center"/>
        </StackPanel>

        <Border Grid.Row="1" Margin="0,10,0,10" Padding="10" CornerRadius="10" BorderThickness="1">
            <TextBlock Text="{Binding DiskSummary}" FontSize="14"/>
        </Border>

        <DataGrid Grid.Row="2"
                  ItemsSource="{Binding TopFolders}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Папка" Binding="{Binding Path}" Width="*"/>
                <DataGridTextColumn Header="Размер (bytes)" Binding="{Binding SizeBytes}" Width="180"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="3" Margin="0,10,0,0"
                   Text="{Binding Status}" />
    </Grid>
</Window>
